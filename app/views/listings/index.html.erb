

<div class="row">
  <div class="col-md-10 col-md-offset-1">
<div align="center">
 <% if user_signed_in? %>
        
<%= link_to 'Create Listing', new_listing_path, class: "btn btn-primary navbar-btn", data: { no_turbolink: true  }  %>
<% end %>
      
</div>
<p></p>
<div class="row">
  
    <% @listings.each do |listing| %>
    <div class="col-md-3">
      <div class="thumbnail">
       <%= link_to image_tag( listing.image.url), listing %>
      <div class="caption">
        <h3><%= listing.name %></h3>
        <p><%= number_to_currency(listing.price) %></p>
         <p><%= "Sold By #{listing.user.name}" %></p>
     
  
             </div>
    </div>
   
     </div>
    <% end %>
</div>


  
</div></div>
